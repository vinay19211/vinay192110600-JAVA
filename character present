import java.util.*;
class Char_present
{
	public static void  main(String args[])
	{
		int i,len=0;
		String s1;
		char a;
		Scanner s=new Scanner(System.in);
		System.out.println("enter the string: ");
		s1=s.nextLine();
		System.out.println("enter the character to search: ");
		a=s.next().charAt(0);
		len=s1.length();
		for(i=0;i<len;i++)
		{
			if(a==s1.charAt(i))
			{
				System.out.println("character is found at index: "+i);
				break;
			}
		}
	}
}
