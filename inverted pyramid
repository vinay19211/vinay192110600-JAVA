import java.util.*;
class Righttraingle{
	public static void main(String args[])
	{
		int n,i,j;
		Scanner s = new Scanner(System.in);
		System.out.println("Enter the no of rows=");
		n = s.nextInt();
		for(i=n;i>0;i--)
		{
			for(int k=1;k<=n-i;k++)
			{
				System.out.print("  ");
			}
			for(j=1;j<=i;j++)
			{
				System.out.print(" "+"*"+"  ");
				
			}
			System.out.println();
		}
	}
}
