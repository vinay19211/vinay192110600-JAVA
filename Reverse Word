import java.util.*;
class Reverseword
{
	public static void main(String args[])
	{
		String a;
		String b=" ";
		int i;
		Scanner s =new Scanner(System.in);
		System.out.println("Enter the String= ");
		a=s.nextLine();
		int x= a.length();
		System.out.println(x);
		for(i=x-1;i>=0;i--)
		{
			b=b+a.charAt(i);
		}
		System.out.println(b);
	}
}
