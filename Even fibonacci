import java.util.*;
class EvenFibo
{
	public static void main(String args[])
	{
		int n1=0,n2=1,sum=0,i,n,total=0;
		Scanner s=new Scanner(System.in);
		System.out.println("enter the n value: ");
		n=s.nextInt();
		for(i=0;i<2*n;i++)
		{
			System.out.println(n1);
			sum=n1+n2;
			n1=n2;
			n2=sum;
			if(i%2!=0)
			{
				total+=n1;
			}
			
		}
		System.out.println("total is:Â "+total);
	}
}
