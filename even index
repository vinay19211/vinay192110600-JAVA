import java.util.*;
class Even_index
{
	public static void main(String args[])
	{
		Scanner s=new Scanner(System.in);
		int n1=0,n2=1,sum=0,a=0,i;
		System.out.println("enter the n value: ");
		int n=s.nextInt();
		for(i=0;i<=2*n;i++)
		{
			sum=n1+n2;
			System.out.println(n1);
			n1=n2;
			n2=sum;
			if(i%2!=0)
			{
				a=a+n1;
			}
		}
		System.out.println("sum of the numbers at even indexes: "+a);
	}
}
